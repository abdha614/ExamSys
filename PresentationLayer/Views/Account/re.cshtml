<div class="container">
    <h2>Assign Professors to Categories</h2>
    <form action="/Admin/AssignCategory" method="POST">
        <div class="form-group">
            <label for="professor">Select Professor</label>
            <select id="professor" name="ProfessorID" class="form-control">
                <!-- Options dynamically populated with professors -->
                <option value="1">Prof. John Doe</option>
                <option value="2">Prof. Jane Smith</option>
            </select>
        </div>
        <div class="form-group">
            <label for="category">Select Category</label>
            <select id="category" name="CategoryID" class="form-control">
                <!-- Options dynamically populated with categories -->
                <option value="101">Mathematics</option>
                <option value="102">Science</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Assign</button>
    </form>
</div>
