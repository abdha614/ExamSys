@model PresentationLayer.ViewModels.QuestionAddViewModel

<h2>Add Multiple Choice Question</h2>
<form asp-action="AddMultipleChoiceQuestion" method="post" class="form-vertical-custom">
    <input type="hidden" asp-for="QuestionTypeId" value="1" />

    <!-- Category Dropdown -->
    <div class="form-group-custom">
        <label for="category">Category:</label>
        <select id="category" name="CategoryId" class="form-control" asp-for="CategoryId">
            <option value="">Select Category</option>
            @foreach (var category in (SelectList)ViewBag.Categories)
            {
                <option value="@category.Value">@category.Text</option>
            }
            <option value="new">Add New Category</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
        <!-- Notification area for duplicate category -->
        <span id="categoryNotification" style="display: none"></span>
    </div>

    <!-- Add New Category -->
    <div id="newCategoryDiv" class="form-group-custom" style="display: none;">
        <label for="newCategoryName">New Category Name:</label>
        <input type="text" id="newCategoryName" name="newCategoryName" class="form-control" placeholder="Enter new category name" />
        <button type="button" class="btn btn-primary" onclick="addCategory()">Add Category</button>
    </div>

    <!-- Course Dropdown -->
    <div class="form-group-custom">
        <label for="course">Course:</label>
        <select id="course" name="CourseId" class="form-control" asp-for="CourseId">
            <option value="">Select Course</option>
        </select>
        <span asp-validation-for="CourseId" class="text-danger"></span>
        <!-- Notification area for duplicate course -->
        <span id="courseNotification" style="display: none;"></span>
    </div>

    <!-- Add New Course -->
    <div id="newCourseDiv" class="form-group-custom" style="display: none;">
        <label for="newCourseName">New Course Name:</label>
        <input type="text" id="newCourseName" name="newCourseName" class="form-control" placeholder="Enter new Course name" />
        <button type="button" class="btn btn-primary" onclick="addCourse()">Add Course</button>
    </div>

    <!-- Question Text -->
    <div class="form-group-custom">
        <label for="questionText">Question Text:</label>
        <textarea id="questionText" asp-for="Text" class="form-control"></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>

    <!-- Difficulty Level -->
    <div class="form-group-custom">
        <label for="difficultyLevel">Difficulty Level:</label>
        <select id="difficultyLevel" name="DifficultyLevelId" class="form-control" asp-for="DifficultyLevelId">
            <option value="1">Easy</option>
            <option value="2">Medium</option>
            <option value="3">Hard</option>
        </select>
        <span asp-validation-for="DifficultyLevelId" class="text-danger"></span>
    </div>

    <!-- Answers -->
    <div class="form-group-custom">
        <label>Answers</label>
        <div id="answersContainer">
            @for (int i = 0; i < Model.Answers.Count; i++)
            {
                <div class="input-group mb-2 answer-group align-items-center">
                    <input asp-for="@Model.Answers[i].Text" class="form-control" placeholder="Enter answer option" />
                    <div class="input-group-append">
                        <div class="input-group-text d-flex justify-content-center align-items-center">
                            <input asp-for="@Model.Answers[i].IsCorrect" type="radio" name="CorrectAnswerIndex" value="@i" />
                        </div>
                    </div>
                    <button type="button" class="btn btn-danger remove-answer d-flex align-items-center"
                            style="font-size: 20px; padding: 5px 10px; height: 100%;">
                        Remove
                    </button>
                </div>

                <span asp-validation-for="@Model.Answers[i].Text" class="text-danger"></span>
            }
        </div>
        <!-- Notification for minimum answer requirement -->
        <div id="minAnswerNotification" class="text-danger" style="display: none; margin-top: 10px;margin-bottom: 10px;"></div>
        <button type="button" id="addAnswer" class="btn btn-secondary">+ Add Answer</button>
    </div>
    <span asp-validation-for="CorrectAnswerIndex" class="text-danger"></span>
    <br>
    
    <button type="submit" class="btn btn-primary-custom">Save</button>
</form>

@section Scripts {
    <script src="~/js/question-scripts.js"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/site1.css" />
}
