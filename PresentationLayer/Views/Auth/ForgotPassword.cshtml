@model PresentationLayer.ViewModels.ForgotPasswordViewModel

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<div class="exam-login-container">
    <div class="exam-shared-boundary">
        <!-- Left Side Image Section -->
        <div class="exam-image">
            <img src="~/images/exam-background.jpg" alt="Password Reset Background" class="img-fluid" />
        </div>

        <!-- Right Side Form Section -->
        <div class="exam-login-card">
            <h3 class="login-title">Reset Your Password</h3>
            <p class="login-subtitle">Enter your registered email address</p>

            <form asp-action="ForgotPassword" method="post" novalidate>
                @Html.AntiForgeryToken()

              @*   <div asp-validation-summary="All" class="text-danger text-center mb-3"></div> *@

                <div class="form-group">
                    <label for="Email" class="form-label">Email Address</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-login mt-3">Send Reset Link</button>

                <!-- ✅ Back to Login -->
                <div class="text-center mt-3">
                    <a asp-action="Login" asp-controller="Auth" class="text-decoration-none" style="color: #25d0ea;">
                        Back to login
                    </a>
                </div>
            </form>

            <footer class="login-footer">
                <p class="mt-4 text-center text-muted">
                    If your email is registered, you'll receive a secure link to reset your password.
                </p>
            </footer>
        </div>
    </div>
</div>
