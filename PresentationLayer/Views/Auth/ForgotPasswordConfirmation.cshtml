@{
    ViewData["Title"] = "Password Reset Sent";
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<div class="exam-login-container">
    <div class="exam-shared-boundary">
        <!-- Left Side Image Section -->
        <div class="exam-image">
            <img src="~/images/exam-background.jpg" alt="Reset Confirmation" class="img-fluid" />
        </div>

        <!-- Right Side Content -->
        <div class="exam-login-card text-center">
            <h3 class="login-title">Reset Link Sent ✔️</h3>
            <p class="login-subtitle">If your email is registered, a secure reset link is on its way.</p>

            <div class="mt-4">
                <i class="bi bi-envelope-check-fill fs-1 text-info"></i>
                <p class="mt-3 text-muted">
                    Please check your inbox (and spam folder) for the reset email.<br />
                    The link will expire shortly for your protection.
                </p>
            </div>

            <a asp-action="Login" asp-controller="Auth" class="btn btn-primary mt-4">
                Back to Login
            </a>
        </div>
    </div>
</div>
