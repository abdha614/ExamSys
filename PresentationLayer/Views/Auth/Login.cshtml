@model PresentationLayer.ViewModels.LoginViewModel

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<div class="exam-login-container">
    <div class="exam-shared-boundary">
        <!-- Left Side - Image Section -->
        <div class="exam-image">
            <img src="~/images/exam-background.jpg" alt="Exam Background" class="img-fluid" />
        </div>

        <!-- Right Side - Login Form Section -->
        <div class="exam-login-card">
            <h3 class="login-title">Welcome to the Exam System</h3>
            <p class="login-subtitle">Log in to manage and take exams</p>

            <form asp-action="Login" method="post" novalidate>
                @Html.AntiForgeryToken()

                <div asp-validation-summary="All" class="text-danger text-center mb-3"></div>

                <div class="form-group">
                    <label for="Email" class="form-label">Email Address</label>
                    <input asp-for="Email" class="form-control" type="email" placeholder="Enter your email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Password" class="form-label">Password</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-login">Login</button>

                <!-- ✅ Forgot Password Link -->
                <div class="text-center mt-3">
                    <a asp-action="ForgotPassword" asp-controller="Auth" class="text-decoration-none" style="color: #25d0ea;">
                        Forgot your password?
                    </a>
                </div>
            </form>

            <footer class="login-footer">
                <p class="mt-3 text-center">
                    Don't have an account?
                    <a asp-controller="Auth" asp-action="RequestSignUp" class="text-decoration-none" style="color: #25d0ea;">Sign Up</a>
                </p>
            </footer>
        </div>
    </div>
</div>
