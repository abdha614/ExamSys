@{
    ViewData["Title"] = "Home Page";
}
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Exam Management System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f8f9fa;
        }

        .header-section {
            background-color: #0d6efd;
            color: white;
            padding: 80px 20px;
            text-align: center;
        }

            .header-section h1 {
                font-size: 3rem;
                font-weight: bold;
            }

            .header-section p {
                font-size: 1.25rem;
            }

        .feature {
            background: white;
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.05);
            height: 100%;
            text-align: center;
        }

        .feature-icon {
            font-size: 2rem;
            color: #0d6efd;
            margin-bottom: 15px;
        }

        .cta-section {
            background-color: #fff;
            padding: 60px 20px;
            text-align: center;
        }

            .cta-section h3 {
                font-size: 2rem;
                font-weight: 600;
            }

        footer {
            background-color: #212529;
            color: white;
            text-align: center;
            padding: 20px 0;
        }
    </style>
</head>
<body>

    <!-- Header -->
    <section class="header-section">
        <div class="container">
            <h1>Welcome to the Exam Management System</h1>
            <p>Create, organize, and generate exams — now with AI and difficulty control</p>
            <a href="/Auth/Login" class="btn btn-light btn-lg mt-3">Login Now</a>
        </div>
    </section>

    <!-- Features -->
    <div class="container py-5">
        <h2 class="text-center mb-5">Core Features</h2>
        <div class="row g-4">

            <div class="col-md-4">
                <div class="feature">
                    <div class="feature-icon">📤</div>
                    <h5>Upload Lectures</h5>
                    <p>Upload PDF lecture files and link them to specific courses for better content management.</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature">
                    <div class="feature-icon">🤖</div>
                    <h5>AI-Based Question Extraction</h5>
                    <p>Automatically extract high-quality questions from lecture files using advanced AI models.</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature">
                    <div class="feature-icon">🎯</div>
                    <h5>Difficulty Level Selection</h5>
                    <p>Tag and filter questions by difficulty (Easy, Medium, Hard) and customize exams accordingly.</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature">
                    <div class="feature-icon">📝</div>
                    <h5>Manual & Auto Exam Generation</h5>
                    <p>Create exams manually or automatically with filters like type, course, and difficulty level.</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature">
                    <div class="feature-icon">🔍</div>
                    <h5>Smart Filtering</h5>
                    <p>Quickly find questions by lecture, type, difficulty, or category using advanced filters.</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature">
                    <div class="feature-icon">🔐</div>
                    <h5>Secure Login</h5>
                    <p>Only registered professors and admins can access the system. Email verification is required.</p>
                </div>
            </div>

        </div>
    </div>

    <!-- CTA -->
    <section class="cta-section">
        <div class="container">
            <h3>Start generating smart exams today!</h3>
            <p class="mt-3">Upload your lectures, extract questions using AI, and create exams tailored by difficulty — all in minutes.</p>
            <a href="/Account/Login" class="btn btn-primary btn-lg mt-3">Login to Your Account</a>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="container">
            &copy; 2025 Exam Management System | Designed by Abd Hamed
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
